[include]
path = ~/.gitconfig.local

[user]
signingkey = ~/.ssh/id_rsa.pub

[gpg]
format = ssh

[hub]
protocol = https

[alias]
co = checkout
promote = !$DOTFILES_ZSH/bin/git-promote
wtf = !$DOTFILES_ZSH/bin/git-wtf
rank-contributors = !$DOTFILES_ZSH/bin/git-rank-contributors
count = !git shortlog -sn

[color]
diff = auto
status = auto
branch = auto
ui = true

[core]
excludesfile = ~/.gitignore
editor = code

[help]
autocorrect = 1

[init]
defaultBranch = main

